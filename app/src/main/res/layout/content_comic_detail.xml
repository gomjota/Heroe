<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/comic_detail_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/comic_detail_title"
            fontPath="fonts/CaptainAmerica.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorComicDetailTitle"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comic_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorComicDetailBody"
            android:textSize="14sp" />

        <TextView
            fontPath="fonts/CaptainAmerica.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/comic_detail_characters"
            android:textColor="@color/colorComicDetailHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comic_detail_characters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorComicDetailBody"
            android:textSize="14sp" />

        <TextView
            fontPath="fonts/CaptainAmerica.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/comic_detail_creators"
            android:textColor="@color/colorComicDetailHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comic_detail_creators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorComicDetailBody"
            android:textSize="14sp" />

        <TextView
            fontPath="fonts/CaptainAmerica.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/comic_detail_release_date"
            android:textColor="@color/colorComicDetailHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comic_detail_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorComicDetailBody"
            android:textSize="14sp" />

        <TextView
            fontPath="fonts/CaptainAmerica.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/comic_detail_price"
            android:textColor="@color/colorComicDetailHeader"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comic_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorComicDetailBody"
            android:textSize="14sp" />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>